<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>school</param-name>
        <param-value>清华</param-value>
    </context-param>
    <context-param>
        <param-name>student</param-name>
        <param-value>张三</param-value>
    </context-param>
    <servlet>
        <servlet-name>aservelt</servlet-name>
        <servlet-class>com.randycout.AServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>aservelt</servlet-name>
        <url-pattern>/a</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>bservelt</servlet-name>
        <servlet-class>com.randycout.BServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bservelt</servlet-name>
        <url-pattern>/b</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cservelt</servlet-name>
        <servlet-class>com.randycout.CServlet</servlet-class>
        <init-param>
            <param-name>name</param-name>
            <param-value>chen</param-value>
        </init-param>
        <init-param>
            <param-name>age</param-name>
            <param-value>18</param-value>
        </init-param>
        <init-param>
            <param-name>address</param-name>
            <param-value>beijing</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>cservelt</servlet-name>
        <url-pattern>/c</url-pattern>
    </servlet-mapping>
</web-app>